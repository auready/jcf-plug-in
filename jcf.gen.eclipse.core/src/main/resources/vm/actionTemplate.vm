@Controller
public class ${UC_NAME}Action {
	@Autowired
	private ${UC_NAME}Service ${UC_NAME_CAMEL}Service;

	/**
	@Title :
	@Description :
	@Author :
	@exception Exception
	*/
	@RequestMapping("${REQ_BASE_URL}/find${UC_NAME}.action")
	public void find${UC_NAME}(MciRequest request, MciResponse response){
		Map<String, Object> model = request.getParam();
		List list ;

		list = ${UC_NAME_CAMEL}Service.find${UC_NAME}(model);
		response.setList("GRD_${TABLENAME}", list);
	}

	/**
	@Title :
	@Description :
	@Author :
	@exception Exception
	*/
	@RequestMapping("${REQ_BASE_URL}/save${UC_NAME}.action")
	public void save${UC_NAME}(MciRequest request, MciResponse response){
		GridData<${TABLENAME}Model> grid${TABLE_NAME_PASCAL} = request.getGridData(
					"DS_${TABLENAME}", ${TABLENAME}Model.class);
		${UC_NAME_CAMEL}Service.save${UC_NAME}(grid${TABLE_NAME_PASCAL});
		response.addSuccessMessage("success");
	}
}
