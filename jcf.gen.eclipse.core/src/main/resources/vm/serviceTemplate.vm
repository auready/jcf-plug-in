@Service
public class ${UC_NAME}Service {

	@Autowired
	private CommonDao commonDao;

	/**
	@Title :
	@Description :
	@Author :
	@Param : Map
	@Return : List
	*/
	public ${UC_NAME}Model get${UC_NAME}(Map param) {
		${UC_NAME}Model ${UC_NAME_CAMEL} = (${UC_NAME}Model)commonDao.queryForObject("${UC_NAME_CAMEL}.get${UC_NAME}List", param);
		return ${UC_NAME_CAMEL};
	}
	
	/**
	@Title :
	@Description :
	@Author :
	@Param : Map
	@Return : List
	*/
	public List get${UC_NAME}List(Map param) {
		List list = commonDao.queryForList("${UC_NAME_CAMEL}.get${UC_NAME}List", param);
		return list;
	}

	/**
	@Title :
	@Description :
	@Author :
	@Param : Map
	@Return : void
	*/
	public void insert${UC_NAME}(${UC_NAME}Model ${UC_NAME_CAMEL}) {
		commonDao.update("${UC_NAME}.insert${UC_NAME}", ${UC_NAME_CAMEL});
	}

	/**
	@Title :
	@Description :
	@Author :
	@Param : Map
	@Return : void
	*/
	public void update${UC_NAME}(${UC_NAME}Model ${UC_NAME_CAMEL}) {
		commonDao.update("${UC_NAME}.update${UC_NAME}", ${UC_NAME_CAMEL});
	}

	/**
	@Title :
	@Description :
	@Author :
	@Param : Map
	@Return : void
	*/
	public void delete${UC_NAME}(${UC_NAME}Model ${UC_NAME_CAMEL}) {
		commonDao.update("${UC_NAME}.delete${UC_NAME}", ${UC_NAME_CAMEL});
	}

	/**
	@Title :
	@Description :
	@Author :
	@Param : GridData
	@Return : void
	*/
	public void save${UC_NAME}(GridData<${UC_NAME}Model> gridData) {
		gridData.forEachRow(new RowStatusCallback<${UC_NAME}Model>() {
			
			@Override
			public void update(${UC_NAME}Model record, ${UC_NAME}Model oldRecord, int rowNum) {
				update${UC_NAME}(record);
			}
			
			@Override
			public void normal(${UC_NAME}Model record, int rowNum) {
				
			}
			
			@Override
			public void insert(${UC_NAME}Model record, int rowNum) {
				insert${UC_NAME}(record);
			}
			
			@Override
			public void delete(${UC_NAME}Model record, int rowNum) {
				delete${UC_NAME}(record);
			}
		});
	}
}
